<IfModule mod_rewrite.c>
    # Allow Googlebot (ensure itâ€™s allowed)
    RewriteCond %{HTTP_USER_AGENT} Googlebot [NC]
    RewriteRule ^ - [L]

    # Block Wapiti scanner based on User-Agent string
    RewriteCond %{HTTP_USER_AGENT} Wapiti [NC]
    RewriteRule ^ - [F,L]

    # Block known malicious bots (python, curl, wget, etc.)
    RewriteCond %{HTTP_USER_AGENT} (python|curl|nmap|libwww-perl|nutch|Wget) [NC]
    RewriteRule ^ - [F,L]
</IfModule>
