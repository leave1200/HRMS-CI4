<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    RewriteBase /
    RewriteRule ^$ public/index.php [L]
    RewriteRule ^((?!public/).*)$ public/$1 [L,NC]

    # Allow access from Googlebot and other legitimate search engines
    RewriteCond %{HTTP_USER_AGENT} (Googlebot|Bingbot|Yandex|DuckDuckBot) [NC]
    RewriteRule ^ - [L]

    # Block specific User-Agents used by scanners
    RewriteCond %{HTTP_USER_AGENT} (python|curl|nmap|libwww-perl|nutch|Wget|Wapiti) [NC]
    RewriteRule ^ - [F,L]
</IfModule>


# Disable directory listing
Options -Indexes
