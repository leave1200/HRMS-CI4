<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    RewriteBase /
    RewriteRule ^$ public/index.php [L]
    RewriteRule ^((?!public/).*)$ public/$1 [L,NC]
</IfModule>

<IfModule mod_rewrite.c>
    # Block Wapiti scanner based on User-Agent string
    RewriteCond %{HTTP_USER_AGENT} Wapiti [NC]
    RewriteRule ^ - [F,L]

    # Block other known scanners but allow safe ones (e.g., Googlebot)
    RewriteCond %{HTTP_USER_AGENT} !(Googlebot|Bingbot) [NC]
    RewriteCond %{HTTP_USER_AGENT} (python|curl|nmap|libwww-perl|nutch|Wget) [NC]
    RewriteRule ^ - [F,L]
</IfModule>

# Block certain file access patterns
<FilesMatch "\.(php|html|htaccess|env|ini|bak|log)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes
