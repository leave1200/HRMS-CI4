<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    RewriteBase /
    RewriteRule ^$ public/index.php [L]
    RewriteRule ^((?!public/).*)$ public/$1 [L,NC]
</IfModule>

<IfModule mod_rewrite.c>
    # Block Wapiti scanner based on User-Agent string
    RewriteCond %{HTTP_USER_AGENT} Wapiti [NC]
    RewriteRule ^ - [F,L]

    # Block other known scanners but allow safe ones (e.g., Googlebot)
    RewriteCond %{HTTP_USER_AGENT} !(Googlebot|Bingbot) [NC]
    RewriteCond %{HTTP_USER_AGENT} (python|curl|nmap|libwww-perl|nutch|Wget) [NC]
    RewriteRule ^ - [F,L]
</IfModule>

<IfModule mod_security.c>
    # Block Wapiti and other scanners with mod_security rules
    SecRule REQUEST_HEADERS:User-Agent "Wapiti" "id:1000001,deny,status:403"
    SecRule REQUEST_HEADERS:User-Agent "(python|curl|nmap|libwww-perl|nutch|Wget)" "id:1000002,deny,status:403"
</IfModule>

# Limit number of requests per IP (rate-limiting)
<IfModule mod_evasive20.c>
    DOSHashTableSize 3097
    DOSPageCount 2
    DOSSiteCount 50
    DOSPageInterval 1
    DOSSiteInterval 1
    DOSBlockingPeriod 10
</IfModule>

# Block certain file access patterns
<FilesMatch "\.(php|html|htaccess|env|ini|bak|log)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes
